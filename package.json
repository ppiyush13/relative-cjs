{
    "name": "relative-cjs",
    "version": "1.0.3",
    "description": "Calculate relative path for commonJs require function",
    "main": "dist/relative-cjs.cjs.js",
    "module": "dist/relative-cjs.esm.js",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "bili --format esm --format cjs --bundle-node-modules --file-name relative-cjs.[format].js",
        "pretest": "npm run build",
        "test": "jest",
        "release": "np --no-yarn --no-cleanup --no-2fa"
    },
    "dependencies": {
        "relative": "^3.0.2"
    },
    "devDependencies": {
        "bili": "^4.8.1",
        "jest": "^25.1.0",
        "np": "^5.2.1",
        "rimraf": "^3.0.0"
    },
    "license": "MIT",
    "keywords": [
        "calculate",
        "relative",
        "file",
        "filepath",
        "fs",
        "path-relative",
        "cjs",
        "commonJs"
    ],
    "author": {
        "name": "Piyush Lodaya",
        "email": "ppiyush13@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ppiyush13/relative-cjs.git"
    },
    "bugs": {
        "url": "https://github.com/ppiyush13/relative-cjs/issues"
    },
    "homepage": "https://github.com/ppiyush13/relative-cjs",
    "files": [
        "dist",
        "src"
    ]
}
